local SaveManager = {}
SaveManager.Library = nil
SaveManager.Folder = "FluentXP/Configs"

function SaveManager:SetLibrary(lib)
    self.Library = lib
end

function SaveManager:SetFolder(folder)
    self.Folder = folder
end

function SaveManager:BuildConfigSection(Tab)
    Tab:AddButton({
        Title = "Save Config",
        Callback = function()
            if self.Library.SaveConfig then
                self.Library:SaveConfig()
            end
        end
    })

    Tab:AddButton({
        Title = "Load Config",
        Callback = function()
            if self.Library.LoadConfig then
                self.Library:LoadConfig()
            end
        end
    })
end

return SaveManager