            local toggled = default or false

            Toggle.Parent = SectionFrame
            Toggle.BackgroundColor3 = currentTheme.Tertiary
            Toggle.BorderSizePixel = 0
            Toggle.Size = UDim2.new(0, 480, 0, 32)  -- Ajustado
            Toggle.AutoButtonColor = false
